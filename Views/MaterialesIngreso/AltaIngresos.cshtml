@model Gestion_Compras.Models.Ingreso
@using Gestion_Compras.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Registrar Ingresos";
    var proveedorList = ViewBag.ProveedorList as List<Proveedor>;
    var itemList = ViewBag.ItemList as List<Item>;
}

<style>
    .container-custom {
        width: 100%;
        padding-right: 15px;
        padding-left: 15px;
        margin-right: auto;
        margin-left: auto;
        max-width: 1400px;
    }

    .table-responsive {
        position: relative;
    }

    .table-header {
        position: sticky;
        top: 0;
        z-index: 1020;
        background-color: white;
    }

    /* Estilos de cards */
    .card-formulario .card-body {
        padding: 1rem;
    }

    .card-formulario .card-title {
        color: #495057;
        font-size: 1.1rem;
    }

    /* Reducir el tamaño de la letra en la tabla */
    .table-sm td,
    .table-sm th {
        font-size: 0.9em;
        text-align: center;
        vertical-align: middle;
    }

    /* Hover effect en las filas */
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.075);
    }
</style>

<div class="container-custom mt-3">


    <!-- Card de Formulario -->
    <div class="card shadow mb-3 card-formulario">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title mb-0">
                    <i class="fas fa-box-open me-2"></i>Registrar Ingresos de Materiales
                </h5>
                <a href="@Url.Action("Index", "Ingreso")" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
                </a>
            </div>
            
            <form id="ingresoForm" class="row g-3">
                @Html.AntiForgeryToken()
                <div class="col-md-3">
                    <label for="itemCodigo" class="form-label">Código del Ítem</label>
                    <input type="text" class="form-control form-control-sm" id="itemCodigo" oninput="limpiarError('itemCodigo')" style="text-transform: uppercase;" />
                    <div id="itemCodigoError" class="text-danger"></div>
                </div>
                <div class="col-md-2">
                    <label for="cantidadIngreso" class="form-label">Cantidad</label>
                    <input type="number" class="form-control form-control-sm" id="cantidadIngreso"
                        step="0.01" min="0.01" oninput="limpiarError('cantidadIngreso')" />
                    <div id="cantidadIngresoError" class="text-danger"></div>
                </div>
                <div class="col-md-3">
                    <label for="proveedorId" class="form-label">Proveedor</label>
                    <select class="form-control form-control-sm" id="proveedorId"
                        onchange="limpiarError('proveedorId')">
                        <option value="">Selecciona Proveedor</option>
                        @foreach (var proveedor in proveedorList)
                        {
                            <option value="@proveedor.Id">@proveedor.RazonSocial</option>
                        }
                    </select>
                    <div id="proveedorIdError" class="text-danger"></div>
                </div>
                <div class="col-md-2">
                    <label for="remito" class="form-label">Remito</label>
                    <input type="text" class="form-control form-control-sm" id="remito"
                        oninput="limpiarError('remito')" />
                    <div id="remitoError" class="text-danger"></div>
                </div>
                <div class="col-md-2">
                    <label for="ordenCompra" class="form-label">Orden de Compra</label>
                    <input type="number" class="form-control form-control-sm" id="ordenCompra"
                        oninput="limpiarError('ordenCompra')" />
                    <div id="ordenCompraError" class="text-danger"></div>
                </div>
                <div class="col-md-2">
                    <label for="pedido" class="form-label">Pedido</label>
                    <input type="number" class="form-control form-control-sm" id="pedido"
                        oninput="limpiarError('pedido')" />
                    <div id="pedidoError" class="text-danger"></div>
                </div>
                <div class="col-md-2">
                    <label for="fecha" class="form-label">Fecha Remito</label>
                    <input type="date" class="form-control form-control-sm" id="fecha"
                        oninput="limpiarError('fecha')" />
                    <div id="fechaError" class="text-danger"></div>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="button" class="btn btn-success btn-sm" onclick="agregarIngreso()">
                        <i class="fas fa-plus me-2"></i>Agregar Ingreso
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Card de Lista de Ingresos -->
    <div class="card shadow mb-0">
        <div class="card-header bg-light d-flex align-items-center justify-content-between">
            <strong>Lista de Ingresos Pendientes</strong>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-primary btn-sm" onclick="registrarIngresos()">
                    <i class="fas fa-save me-2"></i>Registrar Ingresos
                </button>
                <a href="@Url.Action("Index", "Ingreso")" class="btn btn-secondary btn-sm">
                    <i class="fas fa-times me-2"></i>Cancelar
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive" style="height: 400px; overflow-y: auto;">
                <table class="table table-striped table-bordered table-hover text-center table-sm mb-0">
                    <thead class="table-header">
                        <tr>
                            <th style="width: 12%;">Código</th>
                            <th style="width: 25%;">Descripción</th>
                            <th style="width: 8%;">Cantidad</th>
                            <th style="width: 20%;">Proveedor</th>
                            <th style="width: 10%;">Remito</th>
                            <th style="width: 8%;">O.C.</th>
                            <th style="width: 8%;">Pedido</th>
                            <th style="width: 12%;">Fecha</th>
                            <th style="width: 7%;">Acción</th>
                        </tr>
                    </thead>
                    <tbody id="listaIngresos"></tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Select2 CSS y JS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <!-- Incluir FontAwesome para los íconos y SweetAlert2 -->

    <script>
        // Función para formatear números (mostrar decimales solo si existen)
        function formatearNumero(num) {
            return num % 1 === 0 ? num.toFixed(0) : num.toFixed(2);
        }

        var ingresos = [];
        var items = @Html.Raw(Json.Serialize(ViewBag.ItemList));
        console.log("Estructura de los ítems cargados:", items.slice(0, 5)); // Verificar la estructura de los primeros ítems

        items.forEach(item => console.log("Item:", item, "codigo:", item.codigo)); // Verificar el código de cada ítem

        // Inicializar Select2 para el select de proveedores
        $(document).ready(function() {
            $('#proveedorId').select2({
                theme: 'bootstrap-5',
                width: '100%',
                placeholder: 'Selecciona Proveedor',
                allowClear: true,
                selectOnClose: false,
                language: {
                    noResults: function() {
                        return "No se encontraron resultados";
                    },
                    searching: function() {
                        return "Buscando...";
                    }
                }
            });
            
            // Permitir borrar en el campo de búsqueda con backspace
            $('#proveedorId').on('select2:opening', function(e) {
                setTimeout(function() {
                    $('.select2-search__field').attr('contenteditable', 'true');
                }, 0);
            });
        });

        function mostrarError(campo, mensaje) {
            document.getElementById(campo + "Error").textContent = mensaje;
        }

        // Función para mostrar notificaciones toast modernas
        function mostrarToast(mensaje, tipo) {
            // Crear el contenedor de toasts si no existe
            if ($('#toast-container').length === 0) {
                $('body').append('<div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999;"></div>');
            }

            // Definir colores según el tipo
            let bgClass = '';
            let iconClass = '';
            switch(tipo) {
                case 'success':
                    bgClass = 'bg-success text-white';
                    iconClass = 'fas fa-check-circle';
                    break;
                case 'error':
                    bgClass = 'bg-danger text-white';
                    iconClass = 'fas fa-exclamation-circle';
                    break;
                case 'warning':
                    bgClass = 'bg-warning text-dark';
                    iconClass = 'fas fa-exclamation-triangle';
                    break;
                default:
                    bgClass = 'bg-info text-white';
                    iconClass = 'fas fa-info-circle';
            }

            // Crear el toast
            const toastId = 'toast-' + Date.now();
            const toastHtml = `
                <div id="${toastId}" class="toast ${bgClass}" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="4000">
                    <div class="toast-header ${bgClass} border-0">
                        <i class="${iconClass} me-2"></i>
                        <strong class="me-auto">Notificación</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        ${mensaje}
                    </div>
                </div>
            `;

            // Agregar el toast al contenedor
            $('#toast-container').append(toastHtml);

            // Mostrar el toast
            const toastElement = new bootstrap.Toast(document.getElementById(toastId));
            toastElement.show();

            // Remover el toast del DOM después de que se oculte
            document.getElementById(toastId).addEventListener('hidden.bs.toast', function () {
                $(this).remove();
            });
        }

        function mostrarMensajeError(mensaje) {
            mostrarToast(mensaje, 'error');
        }

        function mostrarMensajeExito(mensaje) {
            mostrarToast(mensaje, 'success');
        }

        function limpiarErrores() {
            ["itemCodigo", "cantidadIngreso", "proveedorId", "remito", "ordenCompra", "pedido", "fecha"].forEach(function (campo) {
                document.getElementById(campo + "Error").textContent = "";
            });
        }

        function limpiarError(campo) {
            document.getElementById(campo + "Error").textContent = "";
        }


        function limpiarCampos() {
            document.getElementById("itemCodigo").value = "";
            document.getElementById("cantidadIngreso").value = "";
            // Los demás campos se mantienen para facilitar la carga de múltiples items
        }

        function formatearFecha(fecha) {
            var partes = fecha.split("-");
            return `${partes[2]}/${partes[1]}/${partes[0]}`;
        }

        function validarItemEnPedido(itemCodigo, numeroPedido, cantidadIngreso, callback) {
            console.log('DEBUG Frontend - Validando:', { itemCodigo, numeroPedido, cantidadIngreso });
            
            $.ajax({
                url: '/Ingreso/ValidarItemEnPedido',
                type: 'GET',
                data: { 
                    itemCodigo: itemCodigo, 
                    numeroPedido: numeroPedido,
                    cantidadIngreso: cantidadIngreso
                },
                success: function (response) {
                    console.log('DEBUG Frontend - Respuesta del servidor:', response);
                    callback(response.esValido, response.mensaje, response.cantidadDisponible);
                },
                error: function (xhr, status, errorThrown) {
                    console.error('Error al validar item en pedido:', xhr.responseText);
                    callback(false, 'Error al validar el item en el pedido.', 0);
                }
            });
        }

        function agregarIngreso() {
            limpiarErrores();

            var itemCodigo = document.getElementById("itemCodigo").value.trim();
            var cantidadIngreso = parseFloat(document.getElementById("cantidadIngreso").value);
            var proveedorId = document.getElementById("proveedorId").value;
            var remito = document.getElementById("remito").value.trim();
            var ordenCompra = parseInt(document.getElementById("ordenCompra").value);
            var pedido = parseInt(document.getElementById("pedido").value);
            var fecha = document.getElementById("fecha").value;

            if (itemCodigo === "") {
                mostrarError("itemCodigo", "Por favor, ingresa un código de ítem válido.");
                return;
            }

            if (!cantidadIngreso || cantidadIngreso <= 0) {
                mostrarError("cantidadIngreso", "Por favor, ingresa una cantidad válida.");
                return;
            }

            if (proveedorId === "") {
                mostrarError("proveedorId", "Por favor, selecciona un proveedor.");
                return;
            }

            if (remito === "") {
                mostrarError("remito", "Por favor, ingresa un remito.");
                return;
            }

            if (!ordenCompra || ordenCompra <= 0 || ordenCompra > 2147483647) {
                mostrarError("ordenCompra", "Por favor, ingresa una orden de compra válida.");
                return;
            }

            if (!pedido || pedido <= 0 || pedido > 2147483647) {
                mostrarError("pedido", "Por favor, ingresa un pedido válido.");
                return;
            }

            if (fecha === "") {
                mostrarError("fecha", "Por favor, selecciona una fecha.");
                return;
            }

            // Verificar si el ítem existe (case-insensitive)
            var item = items.find(i => i.codigo.toLowerCase() === itemCodigo.toLowerCase());
            if (!item) {
                mostrarModalError("El código del ítem no existe.");
                return;
            }

            // Convertir el código a mayúsculas para las validaciones
            var itemCodigoMayuscula = itemCodigo.toUpperCase();

            // Validar que el item pertenezca al pedido y la cantidad
            validarItemEnPedido(itemCodigoMayuscula, pedido, cantidadIngreso, function(esValido, mensaje, cantidadDisponible) {
                console.log('DEBUG Frontend - Callback ejecutado:', { esValido, mensaje, cantidadDisponible });
                
                if (!esValido) {
                    console.log('DEBUG Frontend - Mostrando error:', mensaje);
                    mostrarModalError(mensaje);
                    return;
                }

                var descripcion = item ? item.descripcion : "Descripción no encontrada";
                var proveedorText = document.getElementById("proveedorId").options[document.getElementById("proveedorId").selectedIndex].text;

                ingresos.push({
                    ItemCodigo: itemCodigoMayuscula,
                    CantidadIngreso: cantidadIngreso,
                    ProveedorId: parseInt(proveedorId),
                    Remito: remito,
                    OrdenCompra: ordenCompra,
                    Pedido: pedido,
                    FechaRemito: fecha
                });

                limpiarCampos();

                var fechaFormateada = formatearFecha(fecha);

                var listaIngresos = document.getElementById("listaIngresos");
                var tr = document.createElement("tr");
                tr.innerHTML = `<td>${itemCodigoMayuscula}</td><td>${descripcion}</td><td>${formatearNumero(parseFloat(cantidadIngreso))}</td><td>${proveedorText}</td><td>${remito}</td><td>${ordenCompra}</td><td>${pedido}</td><td>${fechaFormateada}</td><td class="text-center align-middle"><button class="btn btn-danger btn-sm" title="Borrar Fila" onclick="borrarFila(this)"><i class="fas fa-trash-alt"></i></button></td>`;
                listaIngresos.appendChild(tr);
            });
        }

        async function borrarFila(button) {
            const row = button.parentNode.parentNode;
            const itemCodigo = row.cells[0].textContent;
            const descripcion = row.cells[1].textContent;

            const result = await Swal.fire({
                title: '¿Eliminar ítem?',
                text: `${itemCodigo} - ${descripcion}`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Eliminar',
                cancelButtonText: 'Cancelar',
                reverseButtons: true,
                width: '400px',
                padding: '1rem'
            });

            if (result.isConfirmed) {
                row.parentNode.removeChild(row);
                ingresos = ingresos.filter(s => s.ItemCodigo !== itemCodigo);
                mostrarToast('Ítem eliminado de la lista', 'success');
            }
        }

        async function registrarIngresos() {
            if (ingresos.length === 0) {
                mostrarToast("No hay items en la lista para registrar.", 'warning');
                return;
            }

            // Confirmación con SweetAlert2
            const result = await Swal.fire({
                title: '¿Registrar Ingresos?',
                text: `Se registrarán ${ingresos.length} item(s) en el sistema.`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Registrar',
                cancelButtonText: 'Cancelar',
                reverseButtons: true,
                width: '400px',
                padding: '1rem'
            });

            if (!result.isConfirmed) {
                return;
            }
            const ingresosDto = ingresos.map(i => ({ 
                ItemCodigo: i.ItemCodigo, 
                CantidadIngreso: i.CantidadIngreso, 
                PersonalId: i.PersonalId, 
                FechaRemito: i.FechaRemito, 
                ItemId: i.ItemId,
                Remito: i.Remito,
                OrdenCompra: i.OrdenCompra, 
                PedidoId: i.Pedido,
                ProveedorId: i.ProveedorId
            }));
            console.log("Ingresos a registrar:", ingresosDto); // Verificar la estructura antes de enviar

            $.ajax({
                url: '/Ingreso/Create',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(ingresosDto),
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    mostrarMensajeExito(response.message);
                    
                    // Notificar a otras ventanas que hay un nuevo movimiento
                    localStorage.setItem('ultimoMovimientoStock', Date.now().toString());
                    
                    // Limpiar la lista y resetear el formulario
                    ingresos = [];
                    document.getElementById('listaIngresos').innerHTML = '';
                    limpiarCampos();
                    
                    // Resetear los selects
                    $('#proveedorId').val('').trigger('change');
                    
                    // Limpiar todos los campos del formulario
                    document.getElementById('remito').value = '';
                    document.getElementById('ordenCompra').value = '';
                    document.getElementById('pedido').value = '';
                    document.getElementById('fecha').value = '';
                },
                error: function (xhr, status, errorThrown) {
                    console.error('Error al registrar ingresos:', xhr.responseText);
                    mostrarToast('Error al registrar ingresos: ' + xhr.responseText, 'error');
                }
            });
        }

        function mostrarModalError(mensaje) {
            Swal.fire({
                title: 'Error de Validación',
                text: mensaje,
                icon: 'error',
                confirmButtonColor: '#dc3545',
                confirmButtonText: 'Entendido',
                width: '400px',
                padding: '1rem',
                customClass: {
                    popup: 'swal2-small'
                }
            }).then(() => {
                // Limpiar campos después de cerrar el modal
                limpiarCampos();
            });
        }
    </script>

}
