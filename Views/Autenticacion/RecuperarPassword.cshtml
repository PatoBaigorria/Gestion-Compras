@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperar Contraseña</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <style>
        .menu-container {
            display: none;
        }
        
        .login-form {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            max-width: 400px;
            width: 100%;
            margin: 0 auto;
        }
        
        .form-control {
            border-radius: 5px;
            padding: 10px 15px;
            margin-bottom: 1rem;
            border: 1px solid #ddd;
        }
        
        .btn-primary {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            font-weight: 600;
        }
        
        .btn-secondary {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            font-weight: 600;
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }
        
        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
        
        .alert {
            border-radius: 5px;
            margin-bottom: 1rem;
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
        }
        
        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }
        
        .alert-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }
        
        .alert-info {
            background-color: #d1ecf1;
            border-color: #bee5eb;
            color: #0c5460;
        }
        
        .logo-container {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .logo {
            max-width: 200px;
            height: auto;
        }
        
        .info-text {
            background-color: #e7f3ff;
            border-left: 4px solid #007bff;
            padding: 1rem;
            margin-bottom: 1.5rem;
            border-radius: 4px;
        }
        
        .info-text p {
            margin: 0;
            font-size: 0.9rem;
            color: #004085;
        }
    </style>
    
    <div class="logo-container">
        <img src="~/images/logo.png" alt="Logo" class="logo">
    </div>
    <div class="container">
        <div class="login-form">
            <h2 class="mb-3">Recuperar Contraseña</h2>
            
            <div class="info-text">
                <p><i class="fas fa-info-circle"></i> Ingresa tu email registrado y te enviaremos un enlace para restablecer tu contraseña.</p>
            </div>
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                </div>
            }
            
            <form asp-action="RecuperarPassword" method="post" id="recuperarForm">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="tu@email.com" required>
                </div>
                <button type="submit" class="btn btn-primary mb-2" id="btnEnviar">
                    <i class="fas fa-paper-plane"></i> Enviar Enlace de Recuperación
                </button>
            </form>
            
            <a href="/Autenticacion/Login" class="btn btn-secondary mt-2">
                <i class="fas fa-arrow-left"></i> Volver al Login
            </a>
        </div>
    </div>
    <script src="~/js/script.js"></script>
    <script>
        // Prevenir envíos duplicados
        document.getElementById('recuperarForm').addEventListener('submit', function(e) {
            const btn = document.getElementById('btnEnviar');
            if (btn.disabled) {
                e.preventDefault();
                return false;
            }
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Enviando...';
        });
    </script>
</body>
</html>
