@using System.Security.Claims

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Gestión de Pañol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f8f9fa;
        }

        .popup-header {
            background: linear-gradient(90deg, #007bff 0%, #00bcd4 100%);
            color: white;
            padding: 1rem;
            text-align: center;
            margin: -20px -20px 20px -20px;
            border-radius: 0;
        }

        .popup-header h1 {
            margin: 0;
            font-size: 1.5rem;
        }

        .features .card {
            transition: transform 0.3s;
        }

        .features .card:hover {
            transform: scale(1.05);
        }
    </style>
</head>

<body>
    <!-- Contenido principal sin navbar -->
    <div class="popup-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    
    <div class="container-fluid">
        @RenderBody() <!-- Carga el contenido de las vistas específicas -->
    </div>

    <!-- Incluir jQuery y Select2 JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    @RenderSection("Scripts", required: false) <!-- Sección Scripts personalizada -->
</body>

</html>
