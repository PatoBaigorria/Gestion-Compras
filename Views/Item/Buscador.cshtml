                const parseNumber = (value) => {
                    const num = parseFloat(value);
                    return isNaN(num) ? null : num;
                };

                const formData = {
                    Id: parseInt($('#itemId').val()),
                    Codigo: $('#editCodigo').val(),
                    Descripcion: $('#editDescripcion').val(),
