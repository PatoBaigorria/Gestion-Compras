                            console.error('Error al actualizar el ítem:', xhr.responseText);
                            const errorMsg = xhr.responseJSON?.message || xhr.statusText || 'Error desconocido';

                            ensureSwal().then(() => {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
