@model IEnumerable<Gestion_Compras.Models.Pedido>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover text-center table-sm">
        <thead class="table-light table-header">
            <tr>
                <th style="width: 80px;">N° Pedido</th>
                <th style="width: 100px;">Fecha</th>
                <th style="width: 100px;">Código</th>
                <th style="width: 300px;">Ítem</th>
                <th style="width: 80px;">Cantidad</th>
                <th style="width: 150px;">Subfamilia</th>
                <th style="width: 80px;">Recibido</th>
                <th style="width: 100px;">Estado</th>
                <th style="width: 120px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var pedido in Model)
                {
                    <tr>
                        <td>@pedido.NumeroPedido</td>
                        <td>@pedido.FechaPedido.ToString("dd/MM/yyyy")</td>
                        <td>@(pedido.ItemCodigo?.ToUpper() ?? "")</td>
                        <td style="text-align: left;">-</td>
                        <td>@(pedido.Cantidad % 1 == 0 ? pedido.Cantidad.ToString("0") : pedido.Cantidad.ToString("0.##"))</td>
                        <td>-</td>
                        <td>@(pedido.Recibido % 1 == 0 ? pedido.Recibido.ToString("0") : pedido.Recibido.ToString("0.##"))</td>
                        <td>
                            @if (pedido.Estado == "PENDIENTE")
                            {
                                <span class="badge bg-warning">@pedido.Estado</span>
                            }
                            else if (pedido.Estado == "RECIBIDO")
                            {
                                <span class="badge bg-success">@pedido.Estado</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@pedido.Estado</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-primary" onclick="editarPedido(@pedido.Id)" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-outline-@(pedido.Estado == "PENDIENTE" ? "success" : "warning")" 
                                    onclick="cambiarEstado(@pedido.Id)" title="Cambiar Estado">
                                    <i class="fas fa-@(pedido.Estado == "PENDIENTE" ? "check" : "undo")"></i>
                                </button>
                                <button class="btn btn-outline-danger" onclick="confirmarEliminar(@pedido.Id)" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center text-muted">
                        <i class="fas fa-info-circle"></i> No se encontraron pedidos
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
